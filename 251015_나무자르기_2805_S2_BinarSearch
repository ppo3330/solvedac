	#include <iostream>
	#include <vector>
	#include <algorithm>

	using namespace std;

	int main() {
		ios_base::sync_with_stdio(false);
		cin.tie(NULL);
		long long N, M;
		cin >> N >> M;
		vector<int> arr(N);

		long long MX = 0;
		for (int i = 0; i < N; i++) {
			cin >> arr[i];
			if (arr[i] > MX)
				MX = arr[i];
		}

		long long left = 0, right = MX;
		long long result;
		while (left <= right) {
			long long mid = (left + right) / 2;
			long long sum = 0;

			for (int i = 0; i < N; i++) {
				if (arr[i] > mid)
					sum += (arr[i] - mid);
			}

			if (sum >= M) {
				result = mid;
				left = mid + 1;
			}
			else {
				right = mid - 1;
			}
		}

		cout << result;
	}
